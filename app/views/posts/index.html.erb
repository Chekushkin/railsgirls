<h1 class="login-page">Posts</h1>
<%= button_to("Logout", destroy_user_session_path, method: :delete) %>
<%= button_to("Delete user", user_registration_path, method: :delete) %>
<%= link_to "New Post", new_post_path, :class => "btn btn-success" %>
<div>
  <ul>
  <% Post.all.each do |post| %>
    <div>
      <span class="label label-default"><%= "Posted by " + post.user.email %></span>
      <br></br>

      <li class="login-page"><%= post.description %></li>
      <li><%= image_tag(post.link) %></li></div>
      <br></br>

      <div class="col-xs-6 col-sm-4">
        <%= link_to "Edit post", edit_post_path(post), :class => "btn btn-warning full_refresh refresh col-md-4" %>

        <% if current_user == post.user %>
          <%=button_to("Delete Post", post_path(post), method: :delete, :class => "btn btn-danger reset col-md-4") %>
        <% end %>
      </div>
  <% end %>
  </ul>
</div>
